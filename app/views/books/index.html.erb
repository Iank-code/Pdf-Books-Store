<p style="color: green"><%= notice %> </p>
<%= stylesheet_link_tag "book_page"%>

<div class="bookContainer">

  <div>
    <%# Todo: Add topics section %>
  </div>

  <div id="books">
    <% @books.each do |book| %>
      <div class="book_file_pdf">
        <h1><%= link_to book.name, book %></h1>
        <p><%= book.description %></p>

        <div  class="book_file">
          <%= render book.file.blob %>
        </div>

      </div>
    <% end %>
  </div>
</div>


